generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model StudioSession {
  id        String   @id @default(uuid())
  name      String
  userId    String
  createdAt DateTime @default(now())

  owner     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  uploads   Upload[]
  exports   Export[]

  @@map("studio_sessions")
  @@index([userId])
}

model User {
  id            String           @id @default(uuid())
  name          String?
  email         String?          @unique
  emailVerified DateTime?
  image         String?
  password      String?

  accounts       Account[]
  sessions       Session[]
  studioSessions StudioSession[]
  uploads        Upload[]
  exports        Export[]
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Work {
  id          String          @id @default(uuid())
  title       String
  description String?
  iswc        String? @unique
  genres      String[]        @default([])
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  recordings  Recording[]
  contributions Contribution[]
  licenses     License[]
  royaltyEvents RoyaltyEvent[]
  ledgerEntries LedgerEntry[]
}

model Recording {
  id              String   @id @default(uuid())
  title           String
  workId          String
  isrc            String? @unique
  durationSeconds Int
  primaryArtist   String
  releasedAt      DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  work Work @relation(fields: [workId], references: [id], onDelete: Cascade)
  royaltyEvents RoyaltyEvent[]

  @@index([workId])
}

model Contributor {
  id        String          @id @default(uuid())
  name      String
  roles     String[]        @default([])
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  contributions Contribution[]
  ledgerEntries LedgerEntry[]
}

model Contribution {
  id            String       @id @default(uuid())
  role          String
  pctShare      Float
  workId        String
  contributorId String
  createdAt     DateTime     @default(now())

  work        Work        @relation(fields: [workId], references: [id], onDelete: Cascade)
  contributor Contributor @relation(fields: [contributorId], references: [id], onDelete: Cascade)

  @@unique([workId, contributorId, role])
}

model RoyaltyEvent {
  id           String   @id @default(uuid())
  recordingId  String
  workId       String?
  usageType    String
  quantity     Int      @default(1)
  amount       Decimal  @db.Decimal(18, 6)
  currency     String   @default("USD")
  territory    String?
  occurredAt   DateTime
  metadata     Json?
  createdAt    DateTime @default(now())

  recording Recording @relation(fields: [recordingId], references: [id], onDelete: Cascade)
  work      Work?     @relation(fields: [workId], references: [id], onDelete: SetNull)
  ledgerEntries LedgerEntry[]

  @@index([recordingId])
  @@index([workId])
  @@index([occurredAt])
}

model CycleCheckpoint {
  id           String   @id @default(uuid())
  cycleNumber  Int
  closedAt     DateTime
  currency     String   @default("USD")
  totalAmount  Decimal  @db.Decimal(18, 6)
  merkleRoot   String
  createdAt    DateTime @default(now())

  ledgerEntries LedgerEntry[]

  @@unique([cycleNumber, currency])
}

model LedgerEntry {
  id             String   @id @default(uuid())
  eventId        String
  workId         String?
  contributorId  String?
  cycleId        String?
  amount         Decimal  @db.Decimal(18, 6)
  currency       String   @default("USD")
  direction      String   @default("credit")
  description    String?
  createdAt      DateTime @default(now())

  event        RoyaltyEvent @relation(fields: [eventId], references: [id], onDelete: Cascade)
  work         Work?        @relation(fields: [workId], references: [id], onDelete: SetNull)
  contributor  Contributor? @relation(fields: [contributorId], references: [id], onDelete: SetNull)
  cycle        CycleCheckpoint? @relation(fields: [cycleId], references: [id], onDelete: SetNull)

  @@index([eventId])
  @@index([workId])
  @@index([contributorId])
  @@index([cycleId])
}

model Upload {
  id         String   @id @default(uuid())
  userId     String
  sessionId  String?
  fileName   String
  fileSize   Int
  mimeType   String
  storageKey String
  storageUrl String
  createdAt  DateTime @default(now())

  user    User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  session StudioSession? @relation(fields: [sessionId], references: [id], onDelete: SetNull)

  @@index([sessionId])
  @@index([createdAt])
}

model Export {
  id           String        @id @default(uuid())
  sessionId    String
  userId       String
  status       ExportStatus  @default(pending)
  format       ExportFormat  @default(wav)
  fileUrl      String?
  storageKey   String?
  fileSize     Int?
  progress     Int           @default(0)
  errorMessage String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  completedAt  DateTime?

  session StudioSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  user    User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([sessionId])
  @@index([userId])
  @@index([status])
}

enum ExportStatus {
  pending
  processing
  completed
  failed
}

enum ExportFormat {
  wav
  mp3
  flac
}

model License {
  id           String         @id @default(uuid())
  workId       String
  licensee     String
  territory    String?
  rightsType   LicenseRightsType
  effectiveFrom DateTime
  expiresOn    DateTime?
  terms        Json?
  status       LicenseStatus  @default(draft)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  work Work @relation(fields: [workId], references: [id], onDelete: Cascade)

  @@index([workId])
  @@index([status])
}

enum LicenseRightsType {
  mechanical
  performance
  synchronization
  master
}

enum LicenseStatus {
  draft
  active
  expired
  revoked
}

model EntityTag {
  id          String            @id @default(uuid())
  newsItemId  String
  entityType  TaggedEntityType
  entityId    String
  confidence  Float             @default(0)
  method      TaggingMethod     @default(heuristic)
  matchedText String?
  createdAt   DateTime          @default(now())

  @@index([newsItemId])
  @@index([entityType, entityId])
}

enum TaggedEntityType {
  artist
  work
  recording
}

enum TaggingMethod {
  heuristic
  fuzzy
  embedding
  hybrid
}

model AlertChannel {
  id               String             @id @default(uuid())
  name             String
  type             AlertChannelType
  destination      String
  config           Json?
  isActive         Boolean            @default(true)
  rateLimitPerHour Int                @default(30)
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  rules            AlertRule[]
  events           AlertEvent[]
}

enum AlertChannelType {
  email
  webhook
  slack
}

model AlertRule {
  id               String             @id @default(uuid())
  name             String
  description      String?
  channelId        String
  entityType       TaggedEntityType?
  entityId         String?
  minConfidence    Float              @default(0.7)
  threshold        Int                @default(10)
  windowMinutes    Int                @default(60)
  cooldownMinutes  Int                @default(30)
  template         Json?
  isActive         Boolean            @default(true)
  lastTriggeredAt  DateTime?
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  channel          AlertChannel       @relation(fields: [channelId], references: [id], onDelete: Cascade)
  events           AlertEvent[]

  @@index([channelId])
  @@index([entityType, entityId])
}

model AlertEvent {
  id          String            @id @default(uuid())
  ruleId      String
  channelId   String
  entityType  TaggedEntityType
  entityId    String
  mentions    Int
  confidence  Float?
  payload     Json?
  status      AlertEventStatus  @default(pending)
  error       String?
  sentAt      DateTime          @default(now())
  rule        AlertRule         @relation(fields: [ruleId], references: [id], onDelete: Cascade)
  channel     AlertChannel      @relation(fields: [channelId], references: [id], onDelete: Cascade)

  @@index([ruleId])
  @@index([channelId])
  @@index([entityType, entityId])
}

enum AlertEventStatus {
  pending
  sent
  failed
}
