    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@ui/*": ["../ui/src/*"],
      "@schemas/*": ["../schemas/src/*"],
      "@trpc/*": ["../trpc/src/*"],
      "@db/*": ["../db/src/*"],
      "@storage/*": ["../storage/src/*"],
      "@omnisonic/pubsub": ["../pubsub/src/index.ts"],
      "@pubsub/*": ["../pubsub/src/*"]
    }
  }
}
